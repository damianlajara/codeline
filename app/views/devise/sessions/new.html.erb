<a data-target="#login-modal" data-toggle="modal" href="#">Login</a>
<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="login-modal" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="loginmodal-container">
      <div class="login-modal">

        <div class="card card-container">
          
          <%= image_tag "avatar-img", class: "profile-img-card" %>
          <p class="profile-name-card">Login</p>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

          <div class="form-group">
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control", id: "login-email"} %>
            <%= f.input :password, required: true, label: false, placeholder: "Password", input_html: {class: "form-control"} %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Sign In", class: "btn btn-lg btn-primary btn-block btn-signin" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
        <!-- /card-container -->

      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#login-modal').modal({
    keyboard: false,
    backdrop: 'static'
  });
</script>
