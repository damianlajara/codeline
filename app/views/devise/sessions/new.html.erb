<a data-target="#login-modal" data-toggle="modal" href="#">Login</a>
<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="login-modal" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="loginmodal-container">
      <div class="login-modal">

        <div class="card card-container">
          <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
          <img class="profile-img-card" id="profile-img" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png"/>
          <p class="profile-name-card" id="profile-name"></p>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

          <div class="form-group">
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control", id: "login-email"} %>
            <%= f.input :password, required: true, label: false, placeholder: "Password", input_html: {class: "form-control"} %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Sign In", class: "btn btn-lg btn-primary btn-block btn-signin" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
        <!-- /card-container -->

      </div>
    </div>
  </div>
</div>
