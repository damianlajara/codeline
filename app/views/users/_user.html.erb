<div class="col-md-3">
  <div class="thumbnail">
    <%= link_to user_path(user.username) do %>
      <%= gravatar_tag user.email, size: 200 %>
    <% end %>
    <%= link_to "Send Message", "#", class: "btn btn-info btn-xs start-conversation",
                "data-sid" => current_user.id, "data-rip" => user.id %>

    <div class="caption">
      <h3><%= user.username %></h3>
      <p><%= action_buttons_for_status_of(user) %></p>
    </div>
  </div>
</div>
