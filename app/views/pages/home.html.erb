<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
  <!-- Overlay -->
  <div class="overlay"></div>

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#bs-carousel" data-slide-to="1"></li>
    <li data-target="#bs-carousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item slides active">
      <div class="slide-1"></div>
      <div class="hero">
        <hgroup>
            <h1>We are the future</h1>
            <h3>Stay up to date with the latest news from your friends</h3>
        </hgroup>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-hero btn-lg" %>
      </div>
    </div>
    <div class="item slides">
      <div class="slide-2"></div>
      <div class="hero">
        <hgroup>
            <h1>Coding is a passion</h1>
            <h3>Live, breathe and eat code</h3>
        </hgroup>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-hero btn-lg" %>
      </div>
    </div>
    <div class="item slides">
      <div class="slide-3"></div>
      <div class="hero">
        <hgroup>
            <h1>Stay Connected</h1>
            <h3>Connect with fellow coders all around the world</h3>
        </hgroup>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-hero btn-lg" %>
      </div>
    </div>
  </div>
</div>
